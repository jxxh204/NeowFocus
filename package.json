{
  "name": "neow-focus-vite",
  "productName": "NeowFocus",
  "version": "1.2.2",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch --sourcemap",
    "build": "electron-vite build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "version:major": "node scripts/increment-version.js major",
    "version:minor": "node scripts/increment-version.js minor",
    "version:patch": "node scripts/increment-version.js patch",
    "build:mas": "rm -rf out/ && PLATFORM=mas node scripts/increment-version.js patch && pnpm run build && electron-forge package --arch=universal --platform=mas && electron-forge make --arch=universal --platform=mas",
    "build:mas:minor": "rm -rf out/ && PLATFORM=mas node scripts/increment-version.js minor && pnpm run build && electron-forge package --arch=universal --platform=mas && electron-forge make --arch=universal --platform=mas",
    "build:mas:major": "rm -rf out/ && PLATFORM=mas node scripts/increment-version.js major && pnpm run build && electron-forge package --arch=universal --platform=mas && electron-forge make --arch=universal --platform=mas",
    "build:local": "pnpm run build && electron-forge package --platform=darwin --arch=universal",
    "test:local": "pnpm run build:local && open out/NeowFocus-darwin-universal/NeowFocus.app",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "dayjs": "^1.11.19",
    "i18next": "^25.6.2",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.22.3",
    "styled-components": "^6.1.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-pkg": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/osx-sign": "^2.2.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-vite": "^2.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-svgr": "^4.3.0"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
